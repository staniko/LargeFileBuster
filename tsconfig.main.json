{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node"],
    "baseUrl": "./"
  },
  "include": ["src/main/**/*", "src/preload/**/*", "src/shared/**/*", "src/types.d.ts"],
  "exclude": ["dist", "out", "src/renderer"]
}
