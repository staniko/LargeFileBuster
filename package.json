{
  "name": "largefilebuster",
  "version": "0.1.5",
  "private": true,
  "license": "EUPL-1.2",
  "author": {
    "name": "Stanislaw Koltschin",
    "email": "stan.the.maker@koltschin.net"
  },
  "main": "dist/main/main.js",
  "type": "commonjs",
  "scripts": {
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "dev": "npm run build:main && concurrently -k \"npm:watch:main\" \"npm:dev:renderer\" \"npm:start:electron\"",
    "dev:renderer": "cross-env NODE_ENV=development vite",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "start:electron": "cross-env NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "play": "concurrently -k \"npm:dev:renderer\" \"npm:start:electron\"",
    "test": "npm run build && npx playwright test",
    "dist:win": "npm version patch --no-git-tag-version && npm run build && electron-builder --win --x64"
  },
  "dependencies": {
    "sql.js": "1.9.0"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "3.0.0",
    "@electron-toolkit/utils": "3.0.0",
    "@playwright/test": "^1.58.2",
    "@types/node": "20.12.7",
    "@types/react": "18.2.46",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitejs/plugin-react": "4.2.1",
    "concurrently": "8.2.2",
    "cross-env": "7.0.3",
    "electron": "^35.7.5",
    "electron-builder": "^26.7.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-react": "7.34.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "typescript": "5.3.3",
    "vite": "^5.4.21"
  },
  "build": {
    "appId": "ch.staniko.largefilebuster",
    "productName": "LargeFileBuster",
    "asar": true,
    "compression": "maximum",
    "electronLanguages": [
      "en-US"
    ],
    "directories": {
      "output": "bin"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/sql.js/package.json",
      "node_modules/sql.js/dist/sql-wasm.js",
      "node_modules/sql.js/LICENSE",
      "!node_modules/sql.js/dist/*debug*",
      "!node_modules/sql.js/dist/*.wasm",
      "!node_modules/sql.js/dist/*.zip",
      "!node_modules/sql.js/dist/sql-asm*",
      "!node_modules/sql.js/dist/worker*",
      "!node_modules/sql.js/{.devcontainer,.eslintrc.js,.jsdoc.config.json,.nojekyll,documentation_index.md,CONTRIBUTING.md,AUTHORS,logo.svg}"
    ],
    "extraResources": [
      {
        "from": "node_modules/sql.js/dist/sql-wasm.wasm",
        "to": "sql-wasm.wasm"
      },
      {
        "from": "assets/icon.png",
        "to": "icon.png"
      }
    ],
    "afterPack": "./scripts/afterPack.js",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "license": "NOTICE"
    }
  }
}
